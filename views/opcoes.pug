doctype html
html
  head
    meta(charset="utf-8")
    link(rel="stylesheet", href="css/opcoes.css")
    link(rel="stylesheet", href="css/flexboxgrid.min.css")
    title= titulo
  body
    aside
     h1 Controlu
     span Painel controlo
     nav
      ul
       a(href="/painel")
        li Painel
       a(href="/consola")
        li Consola
       a(href="/opcoes")
        li(class="ativo") Opções
       a(href="/logout")
        li Sair
    .area-opcoes
     h2 Opções
     .row
      .col-md-6
       form(action="criarconta")
        label Username
        br
        input(type="text", name="username", id="username")
        br
        br
        label Password
        input(type="password", name="password", id="password")
        br
        br
        label Nome
        input(type="text", name="nome", id="nome")
        button(type="submit") Criar
     .row
      .col-md-6
       form(action="mudarnome")
        label Mudar Nome
        br
        input(type="text", name="nome", placeholder=user.nome)
        br
        button(type="submit") Salvar
      .col-md-6
       form(action="mudarpass")
        label Mudar Password
        br
        input(type="password", name="password", placeholder="*******")
        br
        button(type="submit") Salvar
      .col-md-6
       form(action="removeruser")
        label Remover Utilizador
        br
        select(name="usuario")
         - for (var i = 0; i < usuarios.length; i++)
          option(value=usuarios[i].nome) #{usuarios[i].nome}
        br
        button(type="submit") Remover